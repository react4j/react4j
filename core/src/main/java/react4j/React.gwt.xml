<module>
  <inherits name='elemental2.core.Core'/>
  <inherits name='arez.component.Component'/>
  <inherits name='zemeckis.Zemeckis'/>

  <source path='' includes='*.java'/>
  <source path='annotations' includes='*.java'/>
  <source path='internal' includes='**/*.java'/>

  <public path='public' includes='*'/>

  <!--
    These properties are all defined in react4j.ReactConfig
    See that class for a better understanding of what these properties do.
  -->

  <define-property name='react4j.environment' values='development,production'/>
  <set-property name='react4j.environment' value='production'/>

  <define-property name='react4j.enable_view_names' values='true,false'/>
  <set-property name='react4j.enable_view_names' value='false'/>

  <define-property name='react4j.check_invariants' values='true,false'/>
  <set-property name='react4j.check_invariants' value='false'/>

  <define-property name='react4j.minimize_input_keys' values='true,false'/>
  <set-property name='react4j.minimize_input_keys' value='true'/>

  <define-property name='react4j.validate_input_values' values='true,false'/>
  <set-property name='react4j.validate_input_values' value='false'/>

  <define-property name='react4j.store_debug_data_as_state' values='true,false'/>
  <set-property name='react4j.store_debug_data_as_state' value='false'/>

  <define-property name='react4j.freeze_inputs' values='true,false'/>
  <set-property name='react4j.freeze_inputs' value='false'/>
</module>
